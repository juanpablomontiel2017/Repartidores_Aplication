<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_marginTop="10dp"
    android:id="@+id/clientes_item_id">
    
    <ImageView
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@mipmap/ic_launcher_round"
        android:id="@+id/img_cliente"/>
    
    
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="16dp">


    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Nombre del Cliente"
        android:id="@+id/nombre_cliente"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Direccion"
        android:id="@+id/direccion_cliente"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Barrio"
        android:id="@+id/barrio_cliente"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Referencia"
        android:id="@+id/referencia_cliente"/>

    </LinearLayout>


    
    <LinearLayout

        android:gravity="end"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
       
       <Button
           android:id="@+id/btn_efectuar_venta"
           android:padding="20dp"
           android:textAlignment="textStart"
           android:drawablePadding="20dp"
           android:drawableLeft="@drawable/ic_attach_money_black_24dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="@android:color/white"
           android:layout_marginTop="10dp"
           android:layout_gravity="start"





           />

    </LinearLayout>
    
    
    

</LinearLayout>