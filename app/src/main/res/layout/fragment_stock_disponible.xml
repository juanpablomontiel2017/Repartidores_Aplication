                         android:drawableLeft="@drawable/ic_detalle_stock_vehiculo"
                         android:gravity="center"
                         android:text="VER DETALLE"
                         android:textColor="#FFFF"
                         android:textSize="25sp"
                         android:textStyle="bold" />


