<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"


    tools:context=".Detalle_Dinero">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#2962ff"
            android:orientation="horizontal"
            android:weightSum="3">



            <TextView
                android:id="@+id/tandas_detalle_dinero"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="TANDAS"
                android:textAlignment="center"
                android:textColor="#FFFF"
                android:textSize="20sp"
                android:textStyle="bold"/>


            <ImageView

                android:id="@+id/img_detalle_dinero_recibido"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_dinero_recibido" />




            <TextView
                android:id="@+id/recibiste_detalle_dinero"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="RECIBISTE"
                android:textColor="#FFF"
                android:textSize="20sp"
                android:textStyle="bold" />


            <ImageView

                android:id="@+id/img_detalle_dinero_entregado"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_dinero_entregado" />



            <TextView
                android:id="@+id/entregaste_detalle_dinero"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="Entregaste"
                android:textColor="#FFF"
                android:textSize="20sp"
                android:textStyle="bold" />




        </LinearLayout>










</LinearLayout>