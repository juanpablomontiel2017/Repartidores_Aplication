<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#FFF"

    tools:context=".Detalle_Articulos">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="0dp"
        android:orientation="horizontal"
        android:background="#303f9f">


        <TextView
            android:id="@+id/textview_tandas_articulos_detalle_ventas"
            android:layout_width="140dp"
            android:layout_height="58dp"
            android:layout_marginStart="60dp"
            android:text="CARGAS"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textSize="30sp"
            android:textStyle="bold"
            android:typeface="serif" />


        <ImageView
            android:id="@+id/img_cargas_detalle_ventas"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="20dp"
            android:src="@mipmap/ic_launcher_cargass_ventas" />


    </LinearLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tandas_articulos_detalle_ventas"
                android:layout_width="88dp"
                android:layout_height="65dp"
                android:text="Tandas"
                android:textColor="#000"
                android:textSize="26sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/textview_dispenser_plastico_articulos_detalle_ventas"
                android:layout_width="108dp"
                android:layout_height="65dp"
                android:text="Disp. Plasticos"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textview_dispenser_electrico_articulos_detalle_ventas"
                android:layout_width="115dp"
                android:layout_height="65dp"
                android:text="Disp. ElÃ©ctricos"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textview_canillas_articulos_detalle_ventas"
                android:layout_width="78dp"
                android:layout_height="65dp"
                android:text="Canillas"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="25sp"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>