<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:layout_marginTop="50dp"
    tools:context=".EditarClientes">



    <ImageView
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@mipmap/ic_launcher_round"
        android:id="@+id/img_cliente_editar"/>


    <LinearLayout
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:orientation="vertical">


        <EditText
            android:id="@+id/nombre_cliente_editar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="Nombre del Cliente"
            android:textStyle="bold"/>


        <EditText
            android:id="@+id/apellido_cliente_editar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="Apellido del Cliente"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/direccion_cliente_editar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="DirecciÃ³n"
            android:textStyle="bold"/>


        <EditText
            android:id="@+id/barrio_cliente_editar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="Barrio"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/telefono_cliente_editar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="Telefono"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/correo_cliente_editar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:text="Correo"
            android:textStyle="bold"/>


        <EditText
            android:id="@+id/referencia_cliente_editar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:text="Referencia"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="271dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            >


            <Button
                android:id="@+id/button_cancelar_EC"
                android:layout_width="100dp"
                android:layout_height="50dp"

                android:layout_margin="@dimen/appbar_padding_top"


                android:layout_marginTop="10dp"
                android:background="#232323"
                android:drawablePadding="0dp"
                android:padding="0dp"
                android:text="Cancelar"
                android:textColor="@android:color/white" />


            <Button
                android:id="@+id/button_aceptar_EC"
                android:layout_width="100dp"
                android:layout_height="50dp"


                android:layout_margin="@dimen/appbar_padding_top"


                android:layout_marginTop="10dp"
                android:background="#232323"
                android:drawablePadding="0dp"
                android:padding="0dp"
                android:text="Aceptar"

                android:textColor="@android:color/white" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>