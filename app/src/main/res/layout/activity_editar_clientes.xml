<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:layout_marginTop="125dp"
    tools:context=".EditarClientes">



    <ImageView
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@mipmap/ic_launcher_round"
        android:id="@+id/img_cliente_editar"/>


    <LinearLayout
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/nombre_cliente_editar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del Cliente"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/direccion_cliente_editar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Direccion" />

        <TextView
            android:id="@+id/barrio_cliente_editar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Barrio" />


        <TextView
            android:id="@+id/telefono_cliente_editar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telefono" />


        <TextView
            android:id="@+id/correo_cliente_editar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correo" />

        <TextView
            android:id="@+id/referencia_cliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Referencia" />

        <LinearLayout
            android:layout_width="271dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            >



        <Button
            android:id="@+id/button_cancelar"
            android:layout_width="100dp"
            android:layout_height="50dp"

            android:layout_margin="@dimen/appbar_padding_top"


            android:layout_marginTop="10dp"
            android:background="#232323"
            android:drawablePadding="0dp"
            android:padding="0dp"
            android:text="Cancelar"
            android:textColor="@android:color/white" />


            <Button
                android:id="@+id/button_aceptar"
                android:layout_width="100dp"
                android:layout_height="50dp"


                android:layout_margin="@dimen/appbar_padding_top"


                android:layout_marginTop="10dp"
                android:background="#232323"
                android:drawablePadding="0dp"
                android:padding="0dp"
                android:text="Aceptar"

                android:textColor="@android:color/white" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>