<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llv_cliente_mapa_repartidores"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/img_cliente_mapa_repartidores"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:src="@mipmap/cliente_img1_hombrebarbudo_512px" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/apellido_cliente_mapa_repartidores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Montiel"
                android:textSize="20sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/nombre_cliente_mapa_repartidores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Juan Pablo"
                android:textSize="20sp"
                android:textStyle="bold" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView

                    android:id="@+id/vinieta_punto_uno_mapa_repartidores"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:text="‣"
                    android:textSize="20sp" />


                <TextView

                    android:layout_weight="1"
                    android:id="@+id/direccion_cliente_mapa_repartidores"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Calle 6 entre 11 y 13"
                    android:textSize="20sp" />

            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView

                    android:id="@+id/vinieta_punto_dos_mapa_repartidores"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:text="‣"
                    android:textSize="20sp" />



                <TextView

                    android:layout_weight="1"
                    android:id="@+id/barrio_cliente_repartidores"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Centro"
                    android:textSize="20sp" />


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView

                    android:id="@+id/vinieta_punto_tres_mapa_repartidores"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:text="‣"
                    android:textSize="20sp" />


                <TextView

                    android:id="@+id/referencia_cliente_repartidores"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Al lado de una funeraria"
                    android:textSize="20sp" />


            </LinearLayout>



        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">


        <Button
            android:id="@+id/button_editar_cliente_dialog_mapa_repartidores"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/mapa_repartidores_dialog_boton_editar_cliente"
            android:drawableLeft="@drawable/dialog_ic_eliminar_cliente"
            android:paddingRight="5dp"
            android:text="VER/EDITAR DATOS DEL CLIENTE"
            android:textSize="14sp">


        </Button>

    </LinearLayout>




</LinearLayout>