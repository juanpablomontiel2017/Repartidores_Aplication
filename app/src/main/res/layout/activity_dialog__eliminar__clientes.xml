<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="310dp"
    android:layout_height="330dp"
    android:layout_margin="40dp"
    android:background="#FFF"
    android:orientation="vertical">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#78909c"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_warning_eliminar_cliente"
            android:layout_width="40dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_warning_black_24dp" />

        <TextView
            android:id="@+id/tv_warning_eliminar"
            android:layout_width="242dp"
            android:layout_height="70dp"
            android:layout_marginStart="20dp"
            android:padding="10dp"
            android:paddingTop="30dp"
            android:text="Warning"
            android:textColor="#000"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_desea_eliminar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:paddingTop="30dp"
        android:text="Se eliminará el contacto seleccionado.¿Desea continuar?"
        android:textColor="#000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="130dp"
        android:background="#78909c"
        android:gravity="top"
        android:paddingTop="30dp">

        <Button
            android:id="@+id/btn_cancelar_ElC"
            android:layout_width="145dp"
            android:layout_height="60dp"
            android:layout_marginStart="5dp"
            android:background="#00b8d4"
            android:drawableLeft="@drawable/ic_cancel_black_24dp"
            android:text="Cancelar"
            android:textSize="17sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_aceptar_ElC"
            android:layout_width="128dp"
            android:layout_height="60dp"
            android:layout_marginStart="15dp"
            android:background="#00b8d4"
            android:drawableLeft="@drawable/ic_check_black_24dp"
            android:padding="10dp"
            android:text="Aceptar"
            android:textSize="17sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>