<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"


    android:id="@+id/detalle_cargas_y_descargas_id"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"

    tools:context=".Detalle_Envases">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#303f9f"
        android:weightSum="3">


        <TextView
            android:id="@+id/tv_tandas_detalle_envases"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tandas"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:textSize="30sp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/img_cargas_detalle_envases"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher_cargass_ventas" />

        <ImageView
            android:id="@+id/img_descargas_detalle_envases"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher_descargas_ventas" />

    </LinearLayout>


</LinearLayout>