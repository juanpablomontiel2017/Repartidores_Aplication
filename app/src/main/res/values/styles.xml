<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. REPARTIDORES -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>





    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />





    <!--Color del cursor del EditText si el usuario se loguea como SUPERVISOR -->
    <style name="AppTheme.CursorSupervisor" parent="AppTheme">
        <item name="colorAccent">#ff9100</item>
    </style>

    <!--Color del cursor del EditText si el usuario se loguea como REPARTIDOR -->
    <style name="AppTheme.CursorRepartidor" parent="AppTheme">
        <item name="colorAccent">#80deea</item>
    </style>


    <style name="AppTheme.CursorNuevoEvento" parent="AppTheme">
        <item name="colorAccent">#ffff</item>
    </style>



    <!-- Cambio de colores del Calendario (DatePicker) -->

    <style name="MyDatePickerStyleSupervisoresNuevoEvento" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#D50000</item>
    </style>


    <style name="MyDatePickerStyleRepartidoresNuevoEvento" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#0d47a1</item>
    </style>

    <style name="MyDatePickerStyleRepartidoresNuevoResponsable" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent"> #311b92</item>
    </style>




    <!-- ********* Cambio de colores AlertDialog Message SUPERVISORES ********** -->

    <style name="AlertDialogStyleSupervisores" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorAccent">#ffffff</item>
        <item name="android:textColor">#d50000</item>
        <item name="android:textColorPrimary">#000</item>
        <item name="android:textSize">20dip</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyleSupervisores</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyleSupervisores</item>

    </style>

    <!--Colores para los botones -->

    <style name="NegativeButtonStyleSupervisores" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#d50000</item>
        <item name="android:textSize">20dip</item>
    </style>

    <style name="PositiveButtonStyleSupervisores" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#ff9100</item>
        <item name="android:textSize">20dip</item>
    </style>



    <!-- ********* Cambio de colores AlertDialog Message REPARTIDORES ********** -->


    <style name="AlertDialogStyleRepartidores" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorAccent">#ffffff</item>
        <item name="android:textColor">#311b92</item>
        <item name="android:textColorPrimary">#000</item>
        <item name="android:textSize">20dip</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyleRepartidores</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyleRepartidores</item>

    </style>

    <!--Colores para los botones -->

    <style name="NegativeButtonStyleRepartidores" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#311b92</item>
        <item name="android:textSize">20dip</item>
    </style>

    <style name="PositiveButtonStyleRepartidores" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#03a9f4</item>
        <item name="android:textSize">20dip</item>
    </style>








    <style name="NavigationMapRoute">
        <!-- Colors -->
        <item name="routeColor">@color/mapbox_navigation_route_layer_blue</item>
        <item name="routeModerateCongestionColor">
            @color/mapbox_navigation_route_layer_congestion_yellow
        </item>
        <item name="routeSevereCongestionColor">
            @color/mapbox_navigation_route_layer_congestion_red
        </item>
        <item name="routeShieldColor">@color/mapbox_navigation_route_shield_layer_color</item>
        <!-- Scales -->
        <item name="routeScale">1.0</item>
    </style>

    <style name="NavigationView" parent="Theme.AppCompat.NoActionBar">
        <item name="navigationViewPrimary">@color/mapboxWhite</item>
        <item name="navigationViewSecondary">@color/mapboxBlue</item>
        <item name="navigationViewAccent">@color/mapboxPink</item>
    </style>

    <style name="MyCustomTheme" parent="NavigationViewLight">
        <item name="navigationViewPrimary">
            @color/mapbox_navigation_route_alternative_congestion_red
        </item>
        <item name="navigationViewSecondary">@color/mapbox_navigation_route_layer_blue</item>
        <!-- Map style URL -->
        <item name="navigationViewMapStyle">@string/navigation_guidance_day</item>
    </style>


</resources>
