<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. REPARTIDORES -->


    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <!-- Nuevo Evento: Color cursor EditText-->

    <style name="AppTheme.CursorNuevoEvento" parent="AppTheme">
        <item name="colorAccent">@color/secondaryTextColor</item>
    </style>


    <!-- Cambio de colores del Calendario (DatePicker) -->

    <style name="MyDatePickerStyleNuevoEvento" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyDatePickerStyleNuevoResponsable" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>





    <!-- ********* Cambio de colores AlertDialog Message REPARTIDORES ********** -->

    <style name="AlertDialogStyleRepartidores" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorAccent">@color/secondaryTextColor</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:textSize">20dip</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyleRepartidores</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyleRepartidores</item>

    </style>

    <!--Colores para los botones -->

    <style name="NegativeButtonStyleRepartidores" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">20dip</item>
    </style>

    <style name="PositiveButtonStyleRepartidores" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">20dip</item>
    </style>


    <!--#################################################################################################### -->


    <style name="NavigationMapRoute">
        <!-- Colors -->
        <item name="routeColor">@color/mapbox_navigation_route_layer_blue</item>
        <item name="routeModerateCongestionColor">
            @color/mapbox_navigation_route_layer_congestion_yellow
        </item>
        <item name="routeSevereCongestionColor">
            @color/mapbox_navigation_route_layer_congestion_red
        </item>
        <item name="routeShieldColor">@color/mapbox_navigation_route_shield_layer_color</item>
        <!-- Scales -->
        <item name="routeScale">1.0</item>
        <!-- Map style -->
        <item name="navigationViewMapStyle">mapbox://styles/mapbox/navigation-guidance-night-v2
        </item>
    </style>


</resources>
